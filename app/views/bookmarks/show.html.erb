<h1><%= @bookmark.topic.title%> <br></h1>
<div class="row">
   <div class="col-md-8">
     <p><%= @bookmark.url %></p>

     <%# if current_user %>
       <%#= render 'comments/form', comment: Comment.new, post: @post %>
     <%# end %>
   </div>

     <div class="col-md-4">
       <div class="nav pull_right">
       <%= link_to "Edit", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-success' %>
       <%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
      </div>
     </div>
