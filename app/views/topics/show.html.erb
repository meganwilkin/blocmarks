<div class="container-fluid">
<h1><%= @topic.title %></h1>

<%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success'%> <br><br>

  <div class="row">
   <div class="col-md-8">
     <% @topic.bookmarks.each do |bookmark| %>
         <div class="media-body">
           <h4 class="media-heading">
             <ul>
               <p><%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %></p>
             </ul>
           </h4>

       </div><br>
     <% end %>

   </div>

  <div class="col-md-3">
    <div class="nav pull_right">
      <%= link_to "All Topics", topics_path, class: 'btn btn-success'%>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>

    </div>
  </div>
</div>
